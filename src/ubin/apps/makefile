# Builds everything.
all: all-qsort all-sha1 all-dijkstra all-patricia

# Cleans up build objects.
clean: clean-qsort clean-sha1 clean-dijkstra clean-patricia

# Cleans up everything.
distclean: distclean-qsort distclean-sha1 distclean-dijkstra distclean-patricia

#===============================================================================
# Quick Sort Benchmarks
#===============================================================================

# Builds Quick Sort.
all-qsort:
	$(MAKE) -C qsort all

# Cleans up build objects.
clean-qsort:
	$(MAKE) -C qsort clean

# Cleans up everything from Quick Sort.
distclean-qsort:
	$(MAKE) -C qsort distclean

#===============================================================================
# SHA-1
#===============================================================================

# Builds SHA-1.
all-sha1:
	$(MAKE) -C sha1 all

# Cleans up build objects.
clean-sha1:
	$(MAKE) -C sha1 clean

# Cleans up everything
distclean-sha1:
	$(MAKE) -C sha1 distclean

#===============================================================================
# DIJKSTRA
#===============================================================================

# Builds DIJKSTRA.
all-dijkstra:
	$(MAKE) -C dijkstra all

# Cleans up build objects.
clean-dijkstra:
	$(MAKE) -C dijkstra clean

# Cleans up everything
distclean-dijkstra:
	$(MAKE) -C dijkstra distclean

#===============================================================================
# Patricia
#===============================================================================

# Builds SHA-1.
all-patricia:
	$(MAKE) -C patricia all

# Cleans up build objects.
clean-patricia:
	$(MAKE) -C patricia clean

# Cleans up everything
distclean-patricia:
	$(MAKE) -C patricia distclean
